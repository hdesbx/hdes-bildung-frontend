<div class="row mt-5">
  <div class="col-md-3 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-key"></i> Passwort zurücksetzen</h1>
      <%- include ("../partials/messages") %>
      
      <form action="/passwortZuruecksetzen" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">E-Mail</label>
          <input type="email" id="email" name="email" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary w-100">Neues Passwort anfordern</button>
      </form>
      
      <p class="mt-4 text-center">
        <a href="/anmelden">Zurück zur Anmeldung</a>
      </p>
    </div>
  </div>
</div>